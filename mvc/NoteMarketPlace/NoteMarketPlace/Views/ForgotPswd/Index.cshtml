
@{
    ViewBag.Title = "ForgotPswd";
}
<!-- Forgot Section -->
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <section id="forgot" class="forgot-overlay">
        <div class="forgot-parent">
            <div class="forgot-child">
                <img class="img-responsive" src="img/home/top-logo.png" alt="">
                <div class="forgot-details">
                    <div class="text-center">
                        <p>Forgot Password</p>
                        <p>Enter your email address to reset your password</p>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group dis">
                                    <p>Email*</p>
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group error">



                                    @if (@ViewBag.NotValidUser != null)
                                    {

                                        <label style="color:#A94442"> @ViewBag.NotValidUser</label>
                                    }
                                </div>

                            </div>

                            <div class="col-md-12">
                                <div class="form-group dis">

                                    <Button class="form-control">
                                        Submit
                                    </Button>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div>
                                    <p>Done here? <span>@Html.ActionLink("Login", "", "Login")</span></p>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </section>
}

<script type="text/javascript">


    window.onload = window.history.forward(0);  //calling function on window onload

</script>
    <!-- forgot section ends -->
