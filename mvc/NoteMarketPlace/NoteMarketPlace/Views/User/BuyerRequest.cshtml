@using PagedList
@using PagedList.Mvc
@model IPagedList<NoteMarketPlace.Models.MultipleData>
@{
    ViewBag.Title = "BuyerRequest";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="buyer-request">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <p class="page-heading"> Buyer Request</p>

            </div>


            <div class="col-md-6 col-sm-6">
             
                    @using (Html.BeginForm("BuyerRequest", "User", FormMethod.Get))
                    {
                        <div class="col-md-8 col-sm-8 col-xs-8">

                            <input name="search" class="form-control search-input" placeholder="Search..." type="text" value="@ViewBag.search">

                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-4" id="search">
                            <input class="btn btn-work" type="submit" value="Search" />

                        </div>
                    }
                

            </div>
            <div class="col-md-12">
                <div class="all-category-table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="text-center" scope="col">SR NO.</th>
                                <th class="text-center" scope="col">NOTE TITLE</th>
                                <th class="text-center" scope="col">CATEGORY</th>
                                <th class="text-center" scope="col">BUYER</th>
                                <th class="text-center" scope="col">PHONE NO.</th>
                                <th class="text-center" scope="col">SELL TYPE</th>
                                <th class="text-center" scope="col">PRICE</th>

                                <th class="text-center" scope="col">DOWNLOADED DATE/TIME</th>
                                <th></th>
                                <th></th>
                            </tr>

                        </thead>
                        <tbody>


                            @if (!Model.Any())
                            {
                                <tr><td>No Data Found</td></tr>
                            }
                            else
                            {


                                int i = ViewBag.Count - 1;
                                foreach (var item in Model)
                                {


                                    i = i + 1;
                                    <tr>
                                        <td>
                                            @i
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.download.NoteTitle)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.download.NoteCategory)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User.EmailID)
                                        </td>

                                        <td>
                                            @string.Concat(item.userProfile.PhoneNumber_CountryCode + " " + item.userProfile.PhoneNumber)
                        

                                        </td>
                                        @{

                                            bool isPaid = item.download.IsPaid;
                                            if (isPaid)
                                            {
                                                            <td>Paid</td>

                                            }
                                            else
                                            {
                                                            <td>Free</td>
                                            }

                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.download.PurchasedPrice)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.download.CreatedDate)
                                        </td>

                                        <td>

                                            <a class="link-margin" href="/User/showBook/@item.download.NoteID"><img src="../img/dashboard/eye.png"></a>
                                        </td>
                                        <td>


                                            <div id="dots" class="dropdown">

                                                <img class="dropdown-toggle " data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" src="~/img/Dashboard/dots.png" />
                                                <div class="dropdown-menu  dropdown-menu-right ">
                                                    <button class="text-left dropdown-item nav-dropdown-item" onclick="location.href='/User/BuyerAllowed/@item.download.ID'">Yes, I Received</button>
                                                </div>
                                            </div>


                                        </td>

                                    </tr>
                                    }


                                }

                                <!-- </thead> -->
                            </tbody>
                    </table>


                </div>
                <div class="text-center">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                    @Html.PagedListPager(Model, page => Url.Action("BuyerRequest", new { page }))

                </div>


            </div>

        </div>
    </div>
    
</section>
