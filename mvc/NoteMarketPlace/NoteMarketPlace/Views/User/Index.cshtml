@model IEnumerable<NoteMarketPlace.Models.MultipleData>
@{
    ViewBag.Title = "Index";
}

<!-- Home -->
<!-- Dashboard Section -->
<section id="dashboard">

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-6">
                <p id="p-dashboard">Dashboard</p>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                <a class="btn btn-general  btn-work" href="/user/addnote" title="add note" role="button">Add Note</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 dashboard-detalis">
                <div class="col-md-4 col-sm-4 col-xs-12 earning" style="height:122px">
                    <div class="div-content text-center">
                        <img src="../img/dashboard/earning-icon.svg" class="img-responsive" alt="earning">
                        <p>My Earning</p>
                    </div>
                </div>
                <div class="col-md-8 col-sm-8 col-xs-12 earning">
                    <div class="col-md-6 col-sm-6 earning-1" style="height:120px">
                        <div class="div-content text-center">


                            <p>@ViewBag.NoofSoldNote</p>
                            <p>Number of Notes Sold</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 text-center earning-1" style="height:120px">
                        <div class="div-content">



                            @if (@ViewBag.Earnings != null)
                            {
                                <p>$@ViewBag.Earnings</p>
                            }
                            else
                            {
                                <p>$0</p>

                            }
                            <p>Money Earned</p>
                        </div>
                    </div>
                </div>


            </div>
            <div class="col-md-6">
                <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                    <div class="earning">
                        <div class="div-content">
                            <p>@ViewBag.NoofDownload</p>
                            <p>My Downloads</p>
                        </div>
                    </div>

                </div>
                <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                    <div class="earning">
                        <div class="div-content">
                            <p>@ViewBag.Rejectednote</p>
                            <p>My Rejected Notes</p>
                        </div>
                    </div>

                </div>
                <div class="col-md-4 col-sm-4 col-xs-12 text-center">
                    <div class="earning">
                        <div class="div-content">
                            <p>@ViewBag.BuyerReq</p>
                            <p>Buyer Requests</p>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="inprogress">
            <div class="row">
                <div class="col-md-7 col-sm-7 col-xs-12">
                    <p>In Progress Notes</p>

                </div>
                <div class="col-md-5 col-sm-5 col-xs-12 text-right">
                    <div class="dashboard-search">
                        <div class="col-md-8 col-sm-8 col-xs-8">
                            <div class="form-group">
                                <input class="form-control search-input" placeholder=" Search..." type="text">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-4" id="search">
                            <a style="color:#fff" class="btn-general btn-work smooth-scroll" title="search" role="button">Search</a>

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="inprogress-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ADDED DATE</th>
                                    <th scope="col">TITLE</th>
                                    <th scope="col">CATAGORY</th>
                                    <th scope="col">STATUS</th>
                                    <th scope="col">ACTION</th>
                                </tr>
                            </thead>
                            <tbody>

                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td>No data Found</td>
                                    </tr>

                                }
                                else
                                {

                                    foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @item.sellerNote.CreatedDate
                                            </td>
                                            <td>
                                                @item.sellerNote.Title
                                            </td>
                                            <td>
                                                @item.NoteCategory.Name
                                            </td>

                                            <td>
                                                @item.referenceData.Values
                                            </td>


                                            @{
                                                if (item.referenceData.ID == 6)
                                                {
                                                    <td>
                                                        <a class="link-margin" href="#"><img src="../img/dashboard/edit.png"></a> &nbsp;&nbsp;
                                                        <a class="link-margin" href="#"><img src="../img/dashboard/delete.png"></a>
                                                    </td>

                                                }
                                                else
                                                {
                                                    <td>
                                                        <a class="link-margin" href="#"><img src="../img/dashboard/eye.png"></a>
                                                    </td>
                                                }

                                            }


                                        </tr>



                                    }

                                }
                                <!-- </thead> -->
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center" aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="disabled"><a href="#">«</a></li>
                            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#">»</a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

        @{

            Html.RenderAction("publishedNote", "user");
        }

    </div>


</section>


<!-- Dashboard Section Ends -->
<!-- Footer Ends -->
<!-- JQuery -->
