@using PagedList
@using PagedList.Mvc
@model IPagedList<NoteMarketPlace.Models.MultipleData>
@{
    ViewBag.Title = "ManageNoteType";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!-- manage  type  -->


<section id="manage-type">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p class="page-heading"> Manage type</p>

            </div>
            <div class="col-md-6 col-sm-6">
                <a class="btn btn-general btn-work" href="/admin/addNoteType" title="Add Admin" role="button">Add type</a>

            </div>


            <div class="col-md-6 col-sm-6 search-div">
                <div class="col-md-8 col-sm-8 col-xs-8">

                    <input class="form-control search-input" placeholder="Search..." type="text">

                </div>
                <div class="col-md-4 col-sm-4 col-xs-4" id="search">
                    <a class="btn-general btn-work smooth-scroll" title="search" role="button">Search</a>

                </div>
            </div>
            <div class="col-md-12">
                <div class="all-type-table table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">SR NO.</th>
                                <th scope="col">type</th>
                                <th scope="col">DESCRIPTION</th>
                                <th scope="col">DATE ADDED</th>
                                <th scope="col">ADDED BY</th>
                                <th scope="col">ACTIVE</th>
                                <th scope="col">ACTION</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = ViewBag.Count - 1; }
                            @foreach (var item in Model)
                            {
                                string a = "";

                                i = i + 1;
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoteType.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoteType.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NoteType.CreatedDate)
                                    </td>

                                    <td>
                                        @{
                                            a = item.User.FirstName;
                                            a += " ";
                                            a += item.User.LastName;
                                        }
                                        @a
                                    </td>
                                    @{

                                        bool isActive = item.NoteType.IsActive;
                                        if (isActive)
                                        {
                                            <td>Yes</td>

                                        }
                                        else
                                        {
                                            <td>No</td>
                                        }

                                    }


                                    <td>
                                        <a class="link-margin" href="#"><img src="../img/dashboard/edit.png"></a>&nbsp;&nbsp;
                                        <a class="link-margin" href="#"><img src="../img/dashboard/delete.png"></a>

                                </tr>
                            }




                        </tbody>
                    </table>


                </div>
                <div class="text-center">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                    @Html.PagedListPager(Model, page => Url.Action("ManageNoteType", new { page }))
                </div>

            </div>

        </div>
    </div>

</section>

