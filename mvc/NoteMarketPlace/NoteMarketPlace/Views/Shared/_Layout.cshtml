    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/responsive-tabs/jquery.responsiveTabs.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>


</body>
</html>
