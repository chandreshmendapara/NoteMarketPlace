    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Title -->
    <title>MarketPlace</title>

    <!-- Basic SEO -->
    <meta name="description" content="Creative website development with html5, css3, jQuery & bootstrap framework">
    <meta name="keywords" content="HTML5, CSS3, JQuery, Bootstrap, Web Design, Web Development, Responsive website, Creative website">
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">

    @Styles.Render("~/Content/css")
    <!-- Responsive Tabs CSS -->
    <link rel="stylesheet" href="~/content/responsive-tabs/responsive-tabs.min.css">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="~/content/animate/animate.css">

    <link rel="stylesheet" href="~/content/animate/animate.min.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/content/responsive.css">


    <!--bootstrap style -->
    <link rel="stylesheet" href="~/content/bootstrap/bootstrap.css">

    <link rel="stylesheet" href="~/content/bootstrap/bootstrap.min.css">


    <!--fontAwesome -->

    <link rel="stylesheet" href="~/Content/font-awesome.min.css">


    <!--Custom style -->
    <link rel="stylesheet" href="~/content/Site.css">


</head>
<body data-spy="scroll" data-target=".navbar" data-offset="65">
    <header>
        <nav class="navbar navbar-fixed-top purple-nav-top">
            <div class="container-fluid">
                <div class="site-nav-wrapper">
                    <div class="navbar-header">
                        <!-- Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>
                        <!-- Logo -->
                        <a class="navbar-brand" href="/">
                            <img src="~/img/home/logo.png" alt="logo">
                        </a>
                    </div>
                    <!-- Main Menu -->
                    <div class="container">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-right">

                                <li><a href="/home/searchnote">Search Notes</a></li>
                                <li><a href="/user">Sell Your Notes</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a href="/User/BuyerRequest">Buyer Request</a></li>

                                }
                                <li>@Html.ActionLink("faq", "faq", "Home")</li>
                                <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="dropdown" style="margin-top:3px; margin-right:10px; padding:0px">
                                        
                                      
                                            <img class="img-circle img-responsive" data-toggle="dropdown" aria-expanded="true" src="data:image/png;base64, @ViewBag.UserProfile" style="height:40px; cursor:pointer"/>
                                            <div class="dropdown-menu dropdown-menu-right text-left">
                                              
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/User/Profile'">MY Profile</button>
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/User/downloads'">My Downloads</button>
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/User/soldNote'">My Sold Note</button>
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/User/rejectedNotes'">My Rejected Notes</button>
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/home/changePswd'"> Change Password</button>

                                                <button class=" dropdown-item nav-dropdown-item dd-logout" onclick="location.href='/login/logout'">LOGOUT</button>

                                            </div>
                                     

                                       

                                    </li>
                                    <li><Button class="btn btn-work" onclick="location.href='/Login/Logout'" style="margin-top:8px">Logout</Button></li>


                                }
                                else
                                {
                                    <li><Button class="btn btn-work" onclick="location.href='/Login'" style="margin-top:8px">Login</Button></li>
                                }

                            </ul>
                        </div>
                    </div>
                    <!-- Mobile Menu -->
                    <div id="mobile-nav">
                        <!-- Mobile Menu Close Button -->
                        <span id="mobile-nav-close-btn">&times;</span>
                        <div id="mobile-nav-content">
                            <ul style="list-style-type:none;">
                                <li><a href="/home/searchnote">Search Notes</a></li>
                                <li><a href="/user">Sell Your Notes</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a href="/User/BuyerRequest">Buyer Request</a></li>

                                }
                                <li>@Html.ActionLink("faq", "faq", "Home")</li>
                                <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                   
                                   <li class="dropdown" style="margin-top:3px; margin-right:10px; padding:0px">
                                        
                                      
                                            <img class="img-circle img-responsive" data-toggle="dropdown" aria-expanded="true" src="data:image/png;base64, @ViewBag.UserProfile" style="height:40px; cursor:pointer; margin-left:47%"/>
                                            <div class="dropdown-menu">
                                              
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/User/Profile'">MY Profile</button>
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/User/downloads'">My Downloads</button>
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/User/soldNote'">My Sold Note</button>
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/User/rejectedNotes'">My Rejected Notes</button>
                                                <button class=" dropdown-item nav-dropdown-item" onclick="location.href='/home/changePswd'"> Change Password</button>

                                                <button class=" dropdown-item nav-dropdown-item dd-logout" onclick="location.href='/login/logout'">LOGOUT</button>

                                            </div>
                                     

                                       

                                    </li>
                                     

                                       

                                    
                                    <li><Button class="btn btn-work" onclick="location.href='/Login/Logout'" style="margin-top:8px">Logout</Button></li>


                                }
                                else
                                {
                                    <li><Button class="btn btn-work" onclick="location.href='/Login'" style="margin-top:8px">Login</Button></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <div id="preloader">
            <div id="status">&nbsp;</div>
        </div>
        @RenderBody()
    </div>
    <!-- footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6">
                    <p>
                        Copyright &copy; Tatvasoft All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 col-sm-6 text-right">
                    <ul class="pagination social">

                        <li><a class="ficon img-circle" href="#" style="background-color:#6255a5;"><img src="~/img/footer/facebook.png" alt=""></a></li>
                        <li><a class="ficon img-circle" href="#" style="background-color:#6255a5;"><img src="~/img/footer/linkedin.png" alt=""></a></li>
                        <li><a class="ficon img-circle" href="#" style="background-color:#6255a5;"><img src="~/img/footer/twitter.png" alt=""></a></li>

                    </ul>
                </div>
            </div>
        </div>
        <!-- Back To Top -->
        <!-- <a href="#home" id="back-to-top" class="btn btn-sm btn-general btn-back-to-top smooth-scroll hidden-sm hidden-xs" title="home" role="button">
                <i class="fa fa-angle-up"></i>
            </a> -->
    </footer>
    <!-- Footer Ends -->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <!--Scripts.Render("~/bundles/ajax")-->
