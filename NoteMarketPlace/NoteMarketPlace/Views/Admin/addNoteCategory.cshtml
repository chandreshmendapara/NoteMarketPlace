@model NoteMarketPlace.Context.tblNoteCategory
@{
    ViewBag.Title = "addNoteCategory";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}




<!-- Add Book Category section -->


<section class="add-category">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <p class="page-heading">Add Category</p>

            </div>
            <div class="col-md-6 inside-col">
                <div class="col-md-12">
                    <div class="form-group">
                        <p>Category Name*</p>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter note Category" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <p>Description*</p>
                        @Html.TextAreaFor(model => model.Description, new { @id = "text-area", @class = "form-control", placeholder = "Description" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-12">
                    <a class="btn btn-general btn-work  smooth-scroll" href="#about" title="Sell Book" role="button">SUBMIt</a>
                </div>

            </div>

        </div>

    </div>

</section>
